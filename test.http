@api = http://localhost:{{$dotenv PORT}}


################################################################################
# Routes
##
################################### pokemon router ############################


### GET one pokemon by id
GET {{api}}/pokemon/104


### GET one pokemon by name (not case sensitive nor accent sensitive)
GET {{api}}/pokemon/pikachu


### GET all pokemon
GET {{api}}/pokemon


### GET all pokemon of one type
GET {{api}}/pokemon/type/1


### GET all pokemon with immunity from one type
GET {{api}}/pokemon/imune/type/1

### GET all pokemon by generation 
GET {{api}}/pokemon/gen/1

### GET all pokemon with resistance from one type
GET {{api}}/pokemon/resist/type/1

### GET all pokemon with resistance or immunity from one type
GET {{api}}/pokemon/resist/imune/type/1


################################### team router ############################

### GET a random team of 6 pokemon
GET {{api}}/pokemon/full-random

###POST a team to get a complete team with 6 pokemon
POST {{api}}/pokemon/suggested
Content-Type: application/json

[
    1,3,5,7,9
    
]


################################## type router #############################

### GET all types (with damage relations)
GET {{api}}/type


################################## seeding router #############################


### seed one pokemon
GET {{api}}/seeding/1

### seed all pokemon
GET {{api}}/seeding/all


### seed all pokemon of one generation   ###TODO
GET {{api}}/seeding/gen/1

### seed all types
GET {{api}}/seeding/types



####################################cache router #############################

### cache all pokemon
GET {{api}}/cache/all

